<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpaceToonTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/base_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="songCard">
        <item name="android:layout_width">@dimen/song_card_width</item>
        <item name="android:layout_height">@dimen/song_card_height</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
    </style>
    <style name="HeroCard">
        <item name="android:layout_width">@dimen/card_size</item>
        <item name="android:layout_height">@dimen/card_size</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
    </style>
    <style name="NavBarButton">
        <item name="android:layout_width">@dimen/navbar_icon_width</item>
        <item name="android:layout_height">@dimen/navbar_icon_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="NavBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:fontFamily">@font/home_poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

</resources>