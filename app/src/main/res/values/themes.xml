<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpaceToonTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/editTextSize</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">@dimen/editTextPadding</item>
        <item name="android:layout_marginEnd">@dimen/marginEnd</item>
        <item name="android:layout_marginStart">@dimen/editTextMargin</item>
    </style>


</resources>