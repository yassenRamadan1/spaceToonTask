<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpaceToonTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabButtons" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginStart">@dimen/large_margin</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">227dp</item>
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/large_margin</item>
    </style>
</resources>