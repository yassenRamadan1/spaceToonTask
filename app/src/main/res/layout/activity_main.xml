<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_white"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:background="@color/white_87"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="@dimen/view_size"
            android:layout_height="@dimen/view_size"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/medium_margin" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/home_poppins_semibold"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="@color/black"
            android:textSize="@dimen/large_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/medium_margin"
            android:src="@drawable/ic_notification"
            tools:ignore="ContentDescription" />
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        app:layout_constraintTop_toBottomOf="@+id/app_bar" />
    <ScrollView
        android:id="@+id/main_scorll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:scrollbarSize="0dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:id="@+id/poster_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="0dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/PosterCard"
                        android:src="@drawable/naruto_poster"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/PosterCard"
                        android:src="@drawable/mario_poster"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/PosterCard"
                        android:src="@drawable/pokemon_poster"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/planet_text"
                style="@style/MainText"
                android:text="@string/spacetoon_planets"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/poster_scroll" />

            <HorizontalScrollView
                android:id="@+id/planet_scroll"
                style="@style/ScollHorz"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/planet_text">

                <LinearLayout style="@style/BaseLinear">

                    <ImageView
                        style="@style/PlanetCard"
                        android:src="@drawable/planet_action"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/PlanetCard"
                        android:src="@drawable/planet_sport"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/PlanetCard"
                        android:src="@drawable/planet_comedy"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/PlanetCard"
                        android:src="@drawable/planet_adv"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/PlanetCard"
                        android:src="@drawable/planet_zom"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/PlanetCard"
                        android:src="@drawable/planet_girl"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/movie_text"
                style="@style/MainText"
                android:text="@string/Featured_Movies"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/planet_scroll" />


            <HorizontalScrollView
                android:id="@+id/movies_scroll"
                style="@style/ScollHorz"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_text">

                <LinearLayout style="@style/BaseLinear">

                    <ImageView
                        style="@style/MoviesSeriesCard"
                        android:src="@drawable/scooby_doo"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/MoviesSeriesCard"
                        android:src="@drawable/cars"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/MoviesSeriesCard"
                        android:src="@drawable/ben_ten"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/MoviesSeriesCard"
                        android:src="@drawable/marvel"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/MoviesSeriesCard"
                        android:src="@drawable/anime_movie"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/MoviesSeriesCard"
                        android:src="@drawable/truck"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/MoviesSeriesCard"
                        android:src="@drawable/batman"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/MoviesSeriesCard"
                        android:src="@drawable/lion_king"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

            </HorizontalScrollView>


            <TextView
                android:id="@+id/series_text"
                style="@style/MainText"
                android:text="@string/Featured_series"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movies_scroll" />


            <TextView
                android:id="@+id/series_more"
                style="@style/MoreText"
                android:text="@string/more"
                app:layout_constraintBaseline_toBaselineOf="@id/series_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movies_scroll" />

            <TextView
                android:id="@+id/movies_more"
                style="@style/MoreText"
                android:text="@string/more"
                app:layout_constraintBaseline_toBaselineOf="@id/movie_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/planet_scroll" />

            <HorizontalScrollView
                android:id="@+id/series_scroll"
                style="@style/ScollHorz"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/series_text">

                <LinearLayout style="@style/BaseLinear">

                    <ImageView
                        style="@style/MoviesSeriesCard"
                        android:src="@drawable/samurai"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/MoviesSeriesCard"
                        android:src="@drawable/naruto"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/MoviesSeriesCard"
                        android:src="@drawable/dumbo"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/MoviesSeriesCard"
                        android:src="@drawable/alice"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/MoviesSeriesCard"
                        android:src="@drawable/anime_series"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/MoviesSeriesCard"
                        android:src="@drawable/men"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/MoviesSeriesCard"
                        android:src="@drawable/hunter"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/MoviesSeriesCard"
                        android:src="@drawable/maged"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/song_text"
                style="@style/MainText"
                android:text="@string/spacetoon_songs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/series_scroll" />

            <TextView
                android:id="@+id/song_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginEnd="@dimen/medium_margin"
                android:fontFamily="@font/home_poppins_medium"
                android:text="@string/more"
                android:textColor="@color/grey"
                android:textSize="@dimen/medium_text"
                app:layout_constraintBaseline_toBaselineOf="@id/song_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/series_scroll" />

            <HorizontalScrollView
                android:id="@+id/song_scroll"
                style="@style/ScollHorz"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/song_text">

                <LinearLayout style="@style/BaseLinear">

                    <ImageView
                        style="@style/songCard"
                        android:src="@drawable/image_song_1"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/songCard"
                        android:src="@drawable/image_song_2"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/songCard"
                        android:src="@drawable/image_song_3"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/songCard"
                        android:src="@drawable/image_song_4"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/songCard"
                        android:src="@drawable/image_song_5"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/songCard"
                        android:src="@drawable/image_song_6"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/songCard"
                        android:src="@drawable/image_song_7"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/hero_text"
                style="@style/MainText"
                android:text="@string/spacetoon_heros"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/song_scroll" />

            <HorizontalScrollView
                android:id="@+id/hero_scroll"
                style="@style/ScollHorz"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hero_text">

                <LinearLayout style="@style/BaseLinear">

                    <ImageView
                        style="@style/HeroCard"
                        android:src="@drawable/image_hero_1"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/HeroCard"
                        android:src="@drawable/image_hero_2"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/HeroCard"
                        android:src="@drawable/image_hero_3"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/HeroCard"
                        android:src="@drawable/image_hero_4"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/HeroCard"
                        android:src="@drawable/image_hero_5"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/HeroCard"
                        android:src="@drawable/image_hero_6"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/HeroCard"
                        android:src="@drawable/image_hero_7"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/HeroCard"
                        android:src="@drawable/image_hero_8"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/HeroCard"
                        android:src="@drawable/image_hero_9"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        style="@style/HeroCard"
                        android:src="@drawable/image_hero_10"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

            </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout style="@style/NavLinear">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/NavBarButton"
                android:background="@drawable/nav_bar_button_clicked"
                android:drawableStart="@drawable/ic_home" />

            <TextView
                style="@style/NavBarText"
                android:text="@string/home_icon" />
        </LinearLayout>

        <LinearLayout style="@style/NavLinear">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/NavBarButton"
                android:background="@drawable/nav_bar_button"
                android:drawableStart="@drawable/ic_search" />

            <TextView
                style="@style/NavBarText"
                android:text="@string/explore_icon"
                android:textColor="@color/grey" />
        </LinearLayout>

        <LinearLayout style="@style/NavLinear">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/NavBarButton"
                android:background="@drawable/nav_bar_button"
                android:drawableStart="@drawable/ic_favourite" />

            <TextView
                style="@style/NavBarText"
                android:text="@string/favourite_icon"
                android:textColor="@color/grey"
                tools:ignore="TooManyViews" />
        </LinearLayout>

        <LinearLayout
            style="@style/NavLinear"
            tools:ignore="TooManyViews">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/NavBarButton"
                android:background="@drawable/nav_bar_button"
                android:drawableStart="@drawable/ic_user" />

            <TextView
                style="@style/NavBarText"
                android:text="@string/profile_icon"
                android:textColor="@color/grey" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>